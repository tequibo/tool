{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run build.sh",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "run build.sh",
            "program": "${workspaceFolder}/build.sh",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "engineLogging": true
            },
            "osx": {
                "MIMode": "lldb"
            }
        }
    ],
    "tasks": {
        "version": "2.0.0",
        "tasks": [
            {
                "label": "run build.sh",
                "type": "shell",
                "command": "${workspaceFolder}/build.sh",
                "group": {
                    "kind": "build",
                    "isDefault": true
                },
                "problemMatcher": []
            }
        ]
    }
}
